<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09.ExplicitControlDemo">
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,20">
            <StackLayout.Resources>
                <ResourceDictionary>
                    <Style x:Key="labelRedStyle" TargetType="Label">
                        <Setter Property="TextColor" Value="Red"/>
                    </Style>
                </ResourceDictionary>
            </StackLayout.Resources>
            <Label Text="ExplicitControlDemo" Style="{StaticResource Oswaltec}"/>
            <Label Text="These labales" Style="{StaticResource labelRedStyle}"/>
            <Label Text="By. Oswaldo Cadenas" Style="{StaticResource OswaltecP}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>